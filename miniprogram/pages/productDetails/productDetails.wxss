.page{
  background-color: #eee;
  height: 5000rpx;
}
.top_carousel_section{
  position: relative;
  width: 100%;
  height: 620rpx;
}
swiper {
  height: 620rpx;
}
.image_item{
  height: 620rpx;
  width: 100%;
}
.carousel_page_container{
  position: absolute;
  right: 30rpx;
  bottom: 27rpx;
  width: 100rpx;
  height: 44rpx;
  background-color: rgba(0,0,0,.3);
  border-radius: 22rpx;
  color: #fefefe;
  font-size: 24rpx;
}

.price_wrapper_section{
  margin: 25rpx 18rpx;
  padding: 22rpx 28rpx 32rpx;
  border-radius: 16rpx;
  background-color: #fff;
}

.price_wrapper{
  width: 100%;
  height: 90rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.price_box{
  color: #f81e09;
  font-weight: 650;
}
.price_box .price_icon{
  font-size: 34rpx;
}
.price_box .price_num{
  font-size: 47rpx;
}
.collection_box{
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
}
.collection_box .collection_icon{
  font-weight: 650;
}
.collection_box .collection_num{
  font-size: 24rpx;
  margin-top: 8rpx;
}

.title_wrapper{
  font-size: 32rpx;
  font-weight: 650;
  display: -webkit-box;    
  -webkit-box-orient: vertical;    
  -webkit-line-clamp: 2;    
  overflow: hidden;
}

.product_attr_section{
  margin: 25rpx 18rpx;
  padding: 22rpx 28rpx 32rpx;
  border-radius: 16rpx;
  background-color: #fff;
}
