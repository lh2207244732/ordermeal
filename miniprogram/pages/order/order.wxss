.page{
  background-color: #f5f5f5;
  min-height: 100vh;
}

.order_item{
  background-color: #fff;
  margin: 10rpx 14rpx;
  padding: 12rpx 0;
  border-radius: 16rpx;
  overflow: hidden;
}

.store_wrap{
  height: 68rpx;
  padding: 0 12rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.store_info{
  display: flex;
  align-items: center;
}
.store_avatar{
  width: 60rpx;
  height: 60rpx;
  margin-right: 15rpx;
}
.store_name{
  font-size: 26rpx;
}
.store_arrow{
  color: #666;
  margin-left: 8rpx;
}
.order_status{
  font-size: 30rpx;
  color: #df2f22;
}
.order_price_wrap{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 96rpx;
  padding-left: 20rpx;
  padding-right: 16rpx;
}
.order_index_wrap{
  display: flex;
  align-items: center;
}
.order_index_text{
  font-size: 28rpx;
  color: #333;
}
.order_index_num{
  font-size: 38rpx;
  color: #19b5fe;
  margin-left: 15rpx;
}
.total_price_wrap{
  display: flex;
  align-items: center;
}
.price_icon{
  font-size: 28rpx;
  color: #ee0a24;
}
.total_price_num{
  font-size: 38rpx;
  color: #ee0a24;
}
.order_operation_wrap{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20rpx;
}
.order_operation_wrap .van-button{
  margin-left: 27rpx;
}